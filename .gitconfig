[push]
	default = simple
[credential]
	helper = store

# Most of these credentials/overrides are just for cloned repos prior
# to universal switch to git w/ssh keys (see ~/.ssh/config)
[credential "https://github.com"]
	username = memes
[credential "https://tenmedia.visualstudio.com"]
	username = memes@matthewemes.com
[credential "https://bitbucket.org"]
	username = memes
[credential "https://gitlab.com"]
	username = memes
[url "ssh://git@bitbucket.org"]
	insteadOf = https://bitbucket.org

# Various shortcuts
[alias]
	branches = branch -a
	tags = tag
	stashall = stash save --all
	stashes = stash list
	unstage = reset -q HEAD --
	revert = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	graph = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset'
	patch = add --patch
	patches = log --patch --decorate -10
	review = diff --cached --diff-algorithm=minimal -w

# Pull in any configuration that can't be stored in public git repo
[include]
	path = ~/.gitconfig.private
[gpg]
	program = gpg2
